# AI Agent Environment Variables Configuration

# ============================================================================
# CORE CONFIGURATION
# ============================================================================
AI_AGENT_ENV=development
AI_AGENT_DEBUG=true
AI_AGENT_LOG_LEVEL=INFO
AI_AGENT_HOST=localhost
AI_AGENT_PORT=8000

# ============================================================================
# AI PROVIDERS
# ============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4000

# Google AI Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GOOGLE_PROJECT_ID=your_google_project_id

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2023-12-01-preview

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL (Primary Database)
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/ai_agent
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis (Cache and Message Broker)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password
REDIS_MAX_CONNECTIONS=50

# MongoDB (Document Storage)
MONGODB_URL=mongodb://localhost:27017/ai_agent
MONGODB_USERNAME=your_mongo_username
MONGODB_PASSWORD=your_mongo_password

# ============================================================================
# VECTOR DATABASES
# ============================================================================

# ChromaDB
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_COLLECTION_NAME=ai_agent_embeddings

# Pinecone
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=ai-agent-index

# Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your_weaviate_api_key

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_COLLECTION_NAME=ai_agent_vectors

# ============================================================================
# SECURITY
# ============================================================================

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_here_make_it_very_long_and_random
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Keys
API_KEY_HEADER=X-API-Key
API_RATE_LIMIT=100  # requests per minute

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ============================================================================
# MONITORING AND LOGGING
# ============================================================================

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Jaeger (Distributed Tracing)
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
JAEGER_SERVICE_NAME=ai-agent

# Prometheus (Metrics)
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Logging
LOG_FILE_PATH=logs/ai_agent.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# Web Scraping
SCRAPING_USER_AGENT=AI-Agent/1.0 (+https://your-domain.com)
SCRAPING_DELAY=1.0
SCRAPING_TIMEOUT=30

# Email (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# Webhook URLs
WEBHOOK_URL=https://your-webhook-url.com/webhook
WEBHOOK_SECRET=your_webhook_secret

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================

# Memory Management
MEMORY_LIMIT_MB=1024
MEMORY_CLEANUP_INTERVAL=300  # seconds

# Task Execution
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT=300  # seconds
TASK_RETRY_ATTEMPTS=3

# LLM Configuration
LLM_REQUEST_TIMEOUT=30
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY=2

# ============================================================================
# PLUGIN CONFIGURATION
# ============================================================================

# Plugin directories
PLUGIN_DIRECTORIES=plugins,~/.ai_agent/plugins
PLUGIN_AUTO_RELOAD=true

# Plugin-specific settings
WEB_SCRAPER_MAX_PAGES=100
FILE_MANAGER_UPLOAD_DIR=uploads/
CALCULATOR_PRECISION=10

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Development mode
DEV_MODE=true
HOT_RELOAD=true
DEBUG_PROFILER=false

# Testing
TEST_DATABASE_URL=postgresql+asyncpg://test:test@localhost:5432/ai_agent_test
TEST_REDIS_URL=redis://localhost:6379/1

# Mock services (for testing)
MOCK_LLM=false
MOCK_VECTOR_DB=false
MOCK_EXTERNAL_APIs=false